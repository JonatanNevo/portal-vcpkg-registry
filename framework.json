{
  "repo": "JonatanNevo/portal-framework",
  "vcpkg_registry_repo": "JonatanNevo/portal-vcpkg-registry",
  "modules": [
    {
      "name": "portal-application",
      "subdirectory": "application",
      "description": "Application interface for the Portal framework",
      "build_options": [
        "PORTAL_FIND_PACAKGE=ON"
      ],
      "build_target": "portal::application",
      "dependencies": [
        {
          "name": "portal-core",
          "version": "0.0.1"
        }
      ]
    },
    {
      "name": "portal-core",
      "subdirectory": "core",
      "description": "The core of all portal framework components",
      "build_target": "portal::core",
      "dependencies": [
        {
          "name": "glm",
          "version": "1.0.1#3"
        },
        {
          "name": "spdlog",
          "version": "1.15.0#1"
        }
      ]
    },
    {
      "name": "portal-gui",
      "subdirectory": "gui",
      "description": "Base gui application for the Portal framework.",
      "build_options": [
        "PORTAL_FIND_PACAKGE=ON"
      ],
      "build_target": "portal::gui",
      "dependencies": [
        {
          "name": "glfw3",
          "version": "3.4#1"
        },
        {
          "name": "imgui",
          "features": [
            "docking-experimental",
            "glfw-binding",
            "vulkan-binding"
          ],
          "version": "1.91.7"
        },
        {
          "name": "portal-application",
          "version": "0.0.1"
        },
        {
          "name": "stb",
          "version": "2024-07-29#1"
        }
      ]
    },
    {
      "name": "portal-input",
      "subdirectory": "input",
      "description": "The input module for the Portal framework.",
      "build_options": [
        "PORTAL_FIND_PACAKGE=ON"
      ],
      "build_target": "portal::input",
      "dependencies": [
        {
          "name": "glfw3",
          "version": "3.4#1"
        },
        {
          "name": "portal-core",
          "version": "0.0.1"
        }
      ]
    },
    {
      "name": "portal-networking",
      "subdirectory": "networking",
      "description": "The networking module for the Portal framework.",
      "build_options": [
        "PORTAL_FIND_PACAKGE=ON"
      ],
      "build_target": "portal::networking",
      "dependencies": [
        {
          "name": "gamenetworkingsockets",
          "version": "1.4.1#1"
        },
        {
          "name": "portal-core",
          "version": "0.0.1"
        }
      ]
    },
    {
      "name": "portal-serialization",
      "subdirectory": "serialization",
      "description": "Serialization library for Portal",
      "build_options": [
        "PORTAL_FIND_PACAKGE=ON"
      ],
      "build_target": "portal::serialization",
      "dependencies": [
        {
          "name": "portal-core",
          "version": "0.0.1"
        }
      ]
    }
  ]
}